@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Writer/WriterLayout.cshtml";
}

<h1>Blog Düzenleme Sayfası</h1>
@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    <input type="hidden" value="@(Model.WriterID)" name="WriterID" />

    @Html.Label("BlogID")
    @Html.TextBoxFor(x=>x.BlogID,new{@class = "form-control"})
    <br/>
    <br/>
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.BlogTitle,new{@class = "form-control"})
    <br />
    <br />
    @Html.Label("Blog Thumbnail URL")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage,new{@class = "form-control"})
    <br />
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x=>x.BlogImage,new{@class = "form-control"})
    <br />
    <br />
    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewData["cv"],new {@class="form-control"})
    <br />
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x=>x.BlogContent,10,3,new{@class = "form-control"})
    <br />
    <br />
    <button class="btn btn-success">Güncelle</button>
}

