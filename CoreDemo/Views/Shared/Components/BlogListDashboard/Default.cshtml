@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Blog Başlığı </th>
                                <th> Kategori </th>
                                <th> Blog Durumu </th>
                                <th> Oluşturulma Tarihi </th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image"> @item.BlogTitle
                                    </td>
                                    <td> <label class="badge badge-gradient-primary">@item.Category.CategoryName</label> </td>
                                    <td>
                                        @if(item.BlogStatus == true)
                                        {
                                             <label class="badge badge-gradient-success">Aktif</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-gradient-danger">Pasif</label>
                                        }
                                    </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd MMM yyyy")) </td>
                                    <td><a class="btn btn-dark" asp-controller="Blog" asp-action="BlogReadAll" asp-route-id="@item.BlogID">Detaylar</a></td>
                                    
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
