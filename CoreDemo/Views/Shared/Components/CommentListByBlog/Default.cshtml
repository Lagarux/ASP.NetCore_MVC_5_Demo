@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
	<h4>Yorumlar</h4>
	@if(Model.Count() == 0)
	{
	<h5 class="mt-0 text-danger">Bu blogda herhangi bir yorum bulunmamaktadır...</h5>
	}
	else
	{
	@foreach (var item in Model)
	{

			<div class="media row" style="margin: 1em 0;">
			<img src="~/images/user-regular.svg" alt="" class="img-fluid col-2" />
			<div class="media-body col-11">
				<h5 class="mt-0">@item.CommentUserName</h5>
				<p>
					@item.CommentContent
				</p>
			</div>
		</div>
	}
	}
	
</div>
